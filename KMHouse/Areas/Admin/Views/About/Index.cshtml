@model Models.EF.About
@{
    ViewBag.Title = "Giới thiệu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section headertitle{Giới thiệu công ty}@section headermenuroot{Home}@section headermenusub{Giới thiệu}
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                @using (Html.BeginForm("Index", "About", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="box-body">
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Tiêu đề</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "txtName" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Mô tả ngắn</label>
                            <div class="col-sm-6">
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Nội dung</label>
                            <div class="col-sm-10">
                                @Html.TextAreaFor(model => model.Detail, new { @id = "txtDetail", @class = "form-control" })
                                <script>CKEDITOR.replace("txtDetail");</script>
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Meta Title</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.MetaTitle, new { @class = "form-control", @id = "txtMetaTitle" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Meta Keyword</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.MetaKeywords, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Meta Description</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.MetaDescriptions, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Kích hoạt</label>
                            <div class="col-sm-6">
                                @Html.CheckBoxFor(model => model.Status, new { @class = "flat-red", @checked = "checked" })
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <div class="pull-right">
                            <button type="submit" class="btn btn-success btn-sm">Cập nhật</button>
                        </div>
                    </div>
                    <!-- /.box-footer -->
                }
            </div>

        </div>

    </div>
</section>
@section JsFooter
{

    <script src="~/Asset/Admin/Js/controller/AboutController.js"></script>
}
