@model Models.EF.Footer
@{
    ViewBag.Title = "Footer";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section headertitle{Footer}@section headermenuroot{Home}@section headermenusub{Footer}
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">

                @using (Html.BeginForm("Edit", "Footer", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="box-body">
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Tên</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "txtName" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Nội dung</label>
                            <div class="col-sm-10">
                                @Html.TextAreaFor(model => model.Content, new { @id = "txtContent", @class = "form-control" })
                                <script>CKEDITOR.replace("txtContent");</script>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <div class="pull-right">
                            <button type="submit" class="btn btn-success btn-sm">Cập nhật</button>
                            <a href="@Url.Action("Index")" class="btn btn-info btn-sm">Danh sách</a>
                        </div>
                    </div>
                    <!-- /.box-footer -->
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="alert">
                <i>@ViewBag.info</i>
            </div>
        </div>
    </div>
</section>
