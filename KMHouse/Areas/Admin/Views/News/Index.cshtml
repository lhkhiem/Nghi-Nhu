@{
    ViewBag.Title = "Bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section JsFooter
{
    <script src="~/Asset/Admin/Js/controller/NewsController.js"></script>
}

@section headertitle{Danh sách tin tức}@section headermenuroot{Bài viết}@section headermenusub{Danh sách}
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <div class="row">
                        <div class="col-sm-2">
                            <a href="@Url.Action("Create")" id="btnAddNew" class="btn btn-default btn-sm">
                                <i class="fa fa-plus"></i>Tạo mới</a>
                            <a href="@Url.Action("Index")" id="btnReset" class="btn btn-danger btn-sm">
                                <i class="fa fa-refresh"></i>Tải lại</a>
                        </div>
                        <div class="col-sm-3">
                            <div class="input-group">
                                <span class="input-group-addon">Tìm theo</span>
                                <select class="form-control input-sm" id="sltTypeSearch" name="typeSearch">
                                    <option value="0">Tất cả</option>
                                    <option value="1">Tên</option>
                                    <option value="2">Danh mục tin</option>
                                    <option value="3">Tag</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="input-group input-group-sm">
                                <input id="txtKeyword" value="" name="keyword" class="form-control input-sm" placeholder="Nhập từ khóa tìm kiếm" />
                                <span class="input-group-btn">
                                    <button id="btnSearch" type="submit" class="btn btn-info btn-flat"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-1">
                            <div class="form-group-sm" style="margin-top:8px">
                                <input id="ckStatus" type="checkbox" class="flat-red" checked>Active
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="input-group input-group-sm">
                                <select id="sltPageSize" class="form-control" name="PageSize">
                                    @for (int i = 10; i <= 100; i += 5)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                                <span class="input-group-btn">
                                    <label class="btn">dòng/trang</label>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <table id="table" class="table table-bordered table-hover table-condensed">
                        <thead>
                            <tr>
                                <th><span style="margin-left:5px">#</span></th>
                                <th class="length-name-intable">Bài viết</th>
                                <th>Hình ảnh</th>
                                <th>Danh mục tin</th>
                                <th>Ngày tạo</th>
                                <th>Người tạo</th>
                                <th>Kích hoạt</th>
                            </tr>
                        </thead>
                        <tbody id="tblData"></tbody>
                    </table>
                    <div class="row">
                        <div class="col-md-3">
                            <label id="status" style="margin-left:5px;" class="text-gray label label-success">Normal</label>
                        </div>
                        <div class="col-md-3">

                        </div>
                        <div class="col-md-3">

                        </div>
                        <div class="col-md-3">
                            <p id="lbTotal" class="text-right text-bold text-blue"></p>
                        </div>
                    </div>
                    <div id="pagination" class="pagination pull-left">
                    </div>
                    <script id="data-template" type="x-tmpl-mustache">
                        <tr class="data-template">
                            <td style="width:70px">
                                <a href="News/Edit/{{ID}}" class="label label-primary btn-edit" data-id="{{ID}}"><i class="fa fa-fw fa-edit"></i></a>
                                <a class="label label-danger btn-delete" data-id="{{ID}}"><i class="fa fa-fw fa-remove"></i></a>
                            </td>
                            <td>{{Name}}</td>
                            <td>
                                <img src="{{Image}}" height="40" />
                            </td>
                            <td>{{NewsCategoryName}}</td>
                            <td>{{CreateDate}}</td>
                            <td>{{CreateBy}}</td>
                            <td>{{{Status}}}</td>
                        </tr>
                    </script>

                </div>
            </div>
        </div>
    </div>
</section>


