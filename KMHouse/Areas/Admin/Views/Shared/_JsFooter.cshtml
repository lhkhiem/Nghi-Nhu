<script>
    //mở CKfinfer để quản lý ảnh
    $(document).ready(function () {
        $('#btnImage').on('click', function (e) {
            e.preventDefault();
            var fider = new CKFinder();
            fider.selectActionFunction = function (url) {
                $('#txtImage').val(url);
            };
            fider.popup();
        })
    })
</script>
