<!-- Modal -->
<div class="modal fade" id="modalAddUpdate" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm/Sửa Nhóm Tài Khoản</h4>
            </div>
            <div class="modal-body">
                <form role="form" id="frmUserGroup">
                    <div class="form-group-sm">
                        <label for="txtName">ID*:</label>
                        <input type="text" class="form-control" id="txtID" value="" placeholder="Chữ hoa: ADMIN, MEMBER..." />
                        <label for="txtName">Tên gọi:</label>
                        <input type="text" class="form-control" name="txtName" id="txtName">
                        <label for="txtDescription">Diễn giải:</label>
                        @Html.TextArea("txtDescription", new { id = "txtDescription", @class = "form-control", @placeholder="....." })

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
