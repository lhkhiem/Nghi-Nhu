                                </div><!-- End .entry-cats -->
                            </div><!-- End .entry-body -->
                        </article><!-- End .entry -->
                    </div><!-- End .owl-carousel -->
                </div><!-- End .related-posts -->
            </div><!-- End .col-lg-9 -->

            <aside class="col-lg-3">
                <div class="sidebar">
                    <div class="widget widget-search">
                        <h3 class="widget-title">Tìm kiếm</h3><!-- End .widget-title -->

                        <form action="#">
                            <label for="ws" class="sr-only">Tìm trong danh mục</label>
                            <input type="search" class="form-control" name="ws" id="ws" placeholder="Tìm trong danh mục" required>
                            <button type="submit" class="btn"><i class="icon-search"></i><span class="sr-only">Search</span></button>
                        </form>
                    </div><!-- End .widget -->

                    <div class="widget widget-cats">
                        <h3 class="widget-title">Danh mục tin</h3><!-- End .widget-title -->

                        <ul>
                            @foreach (var item in listNewsCategory)
                            {
                                <li><a href="/tin-tuc/@item.MetaTitle-@item.ID">@item.Name<span>></span></a></li>
                            }
                        </ul>
                    </div><!-- End .widget -->

                    <div class="widget">
                        <h3 class="widget-title">Tin phổ biến</h3><!-- End .widget-title -->

                        <ul class="posts-list">
                            @if (listRecent.Count > 0)
                            {
                                foreach (var newsRecent in listRecent)
                                {
                                    <li>
                                        <figure>
                                            <a href="#">
                                                <img src="@newsRecent.Image" alt="@newsRecent.Name">
                                            </a>
                                        </figure>

                                        <div>
                                            <span>@newsRecent.CreateDate</span>
                                            <h4><a href="#">@Html.Raw(newsRecent.Name)</a></h4>
                                        </div>
                                    </li>
                                }
                            }
                        </ul><!-- End .posts-list -->
                    </div><!-- End .widget -->

                    <div class="widget widget-banner-sidebar">
                        <div class="banner-sidebar-title">ad box 280 x 280</div><!-- End .ad-title -->

                        <div class="banner-sidebar">
                            <a href="#">
                                <img src="/Asset/Client/assets/images/blog/sidebar/banner.jpg" alt="banner">
                            </a>
                        </div><!-- End .banner-ad -->
                    </div><!-- End .widget -->

                    <div class="widget">
                        <h3 class="widget-title">Tags tin tức</h3><!-- End .widget-title -->

                        <div class="tagcloud">
                            <a href="#">fashion</a>
