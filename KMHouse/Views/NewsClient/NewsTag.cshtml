@model List<Models.ViewModels.NewsViewModel>
@{
    ViewBag.Title = "Bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listTag = (Models.EF.Tag)ViewBag.ListTag;
}
<div class="breadcrumb-area">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li><a href="/bai-viet/">Bài viết</a></li>
                <li class="active">tag"@listTag.Name"</li>
            </ul>
        </div>
    </div>
</div>
<div class="li-main-blog-page pt-60 pb-55">
    <div class="container">
        <div class="row">
            <!-- Begin Li's Main Content Area -->
            <div class="col-lg-12">
                <div class="row li-main-content">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="li-blog-single-item pb-25">
                                <div class="li-blog-banner">
                                    <a href="/chi-tiet-bai-viet/@item.MetaTitle-@item.ID"><img class="img-full" src="@item.Image" alt="@item.Name"></a>
                                </div>
                                <div class="li-blog-content">
                                    <div class="li-blog-details">
                                        <h3 class="li-blog-heading pt-25"><a href="/chi-tiet-bai-viet/@item.MetaTitle-@item.ID">@item.Name</a></h3>
                                        <div class="li-blog-meta">
                                            <a class="author"><i class="fa fa-user"></i> @item.CreateBy</a>
                                            <a class="comment"><i class="fa fa-hashtag"></i> @item.NewsCategoryName</a>
                                            <a class="post-time"><i class="fa fa-calendar"></i> @string.Format("{0:dd/MM/yyyy}", item.CreateDate)</a>
                                        </div>
                                        @Html.Raw(item.Description.Length < 200 ? item.Description : item.Description.Substring(0, 150))
                                        <a class="read-more" href="/chi-tiet-bai-viet/@item.MetaTitle-@item.ID">Chi tiết...</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Begin Li's Pagination Area -->
                    <div class="col-lg-12">
                        <div class="li-paginatoin-area text-center pt-25">
                            <div class="row">
                                <div class="col-lg-12">
                                    <ul class="li-pagination-box">
                                        <li><a class="Previous" href="#">Previous</a></li>
                                        <li class="active"><a href="#">1</a></li>
                                        <li><a href="#">2</a></li>
                                        <li><a href="#">3</a></li>
                                        <li><a class="Next" href="#">Next</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Li's Pagination End Here Area -->
                </div>
            </div>
            <!-- Li's Main Content Area End Here -->
        </div>
    </div>
</div>

