<div class="modal fade" id="signin-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="icon-close"></i></span>
                </button>

                <div class="form-box">
                    <div class="form-tab">
                        <ul class="nav nav-pills nav-fill nav-border-anim" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="signin-tab" data-toggle="tab" href="#signin" role="tab" aria-controls="signin" aria-selected="true">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="register-tab" data-toggle="tab" href="#register" role="tab" aria-controls="register" aria-selected="false">Đăng ký</a>
                            </li>
                        </ul>
                        <div class="tab-content" id="tab-content-5">
                            <div class="tab-pane fade show active" id="signin" role="tabpanel" aria-labelledby="signin-tab">
                                @Html.AntiForgeryToken()

                                <form id="frmLogin" action="dang-nhap/" method="post">
                                    <div id="error"></div>
                                    <div class="form-group">
                                        <label for="singin-email">Email đăng nhập*</label>
                                        <input type="text" class="form-control" id="txtEmail" name="txtEmail" required>
                                    </div><!-- End .form-group -->

                                    <div class="form-group">
                                        <label for="singin-password">Mật khẩu *</label>
                                        <input type="password" class="form-control" id="txtPassword" name="txtPassword" required>
                                    </div><!-- End .form-group -->

                                    <div class="form-footer">
                                        <button id="login" type="button" class="btn btn-outline-primary-2">
                                            <span>Đăng nhập</span>
                                            <i class="icon-long-arrow-right"></i>
                                        </button>
                                        <a href="/quen-mat-khau" class="forgot-link">Quên mật khẩu?</a>
                                    </div><!-- End .form-footer -->
                                </form>
                            </div><!-- .End .tab-pane -->
                            <div class="tab-pane fade" id="register" role="tabpanel" aria-labelledby="register-tab">
                                <form id="frmRegister" action="dang-ky/" method="post">
                                    <div id="error2"></div>
                                    <div class="form-group">
                                        <label for="txtEmail2">Địa chỉ email *</label>
                                        <input type="email" class="form-control" id="txtEmail2" name="txtEmail2" required>
                                    </div><!-- End .form-group -->

                                    <div class="form-group">
                                        <label for="txtPassword2">Mật khẩu *</label>
                                        <input type="password" class="form-control" id="txtPassword2" name="txtPassword2" required>
                                    </div><!-- End .form-group -->
                                    <div class="form-group">
                                        <label for="txtName">Họ tên *</label>
                                        <input type="text" class="form-control" id="txtName" name="txtName" required>
                                    </div><!-- End .form-group -->
                                    <div class="form-group">
                                        <label for="txtAddress">Địa chỉ *</label>
                                        <input type="text" class="form-control" id="txtAddress" name="txtAddress" required>
                                    </div><!-- End .form-group -->
                                    <div class="form-group">
                                        <label for="txtPhone">Điện thoại *</label>
                                        <input type="text" class="form-control" id="txtPhone" name="txtPhone" required>
                                    </div><!-- End .form-group -->
                                    <div class="form-footer">
                                        <button id="register" type="button" class="btn btn-outline-primary-2">
                                            <span>Đăng ký</span>
                                            <i class="icon-long-arrow-right"></i>
                                        </button>

                                        @*<div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="register-policy" required>
                                                <label class="custom-control-label" for="register-policy">Đồng ý các điều khoản <a href="#">privacy policy</a> *</label>
                                            </div>*@<!-- End .custom-checkbox -->
                                    </div><!-- End .form-footer -->
                                </form>
                            </div><!-- .End .tab-pane -->
                        </div><!-- End .tab-content -->
                    </div><!-- End .form-tab -->
                </div><!-- End .form-box -->
            </div><!-- End .modal-body -->
        </div><!-- End .modal-content -->
    </div><!-- End .modal-dialog -->
</div>